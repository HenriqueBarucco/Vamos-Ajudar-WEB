{
    "extends": "next/core-web-vitals",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["react"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "no-console": [
            "error",
            {
                "allow": ["warn", "error"]
            }
        ],
        "no-alert": "error",
        "no-unused-expressions": "error",
        "no-unused-vars": "error",
        "no-debugger": "error"
    }
}
